# Base
NODE_ENV="development"
SESSION_SECRET="your_session_secret_here"
ENCRYPTION_SECRET="your_encryption_secret_here"

# Host
BASE_URL="http://localhost:3000"
PROD_HOST_URL=""

# DB
DATABASE_URL="postgres://postgres@localhost:5432/remix"

# Email & Auth Providers
RESEND_API_KEY="your_resend_api_key_here"
SESSION_SECRET="your_session_secret_here"
SALES_TEAM_EMAILS="your_sales_email@example.com"

# Stripe
# On localhost: run `stripe listen --forward-to localhost:3000/api/webhook` to get the `STRIPE_WEBHOOK_ENDPOINT` secret.
# On production: @see https://dashboard.stripe.com/test/webhooks
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key_here"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_ENDPOINT="whsec_your_webhook_endpoint_secret_here"

# Honeypot.
# https://github.com/sergiodxa/remix-utils?tab=readme-ov-file#form-honeypot
HONEYPOT_ENCRYPTION_SEED="your_honeypot_encryption_seed_here"

# Better Auth
BETTER_AUTH_SECRET="your_better_auth_secret_here"
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# From Email for Resend
FROM_EMAIL="Triven App <onboarding@resend.dev>"

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY="your_imagekit_public_key_here"
IMAGEKIT_PRIVATE_KEY="your_imagekit_private_key_here"
IMAGEKIT_URL_ENDPOINT="your_imagekit_url_endpoint_here"

# Ollama Configuration (Docker container)
OLLAMA_HOST="http://localhost:11434"